{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "jsx": "react",
    "lib": ["es6", "dom"],
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": "src",
    "sourceMap": true,
    "target": "es5",
    "paths": {
      "@shared/*": ["src/shared/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "config",
    "webpack",
    "acceptance-tests",
    "jest",
    "src/client/setupTests.ts"
  ]
}
