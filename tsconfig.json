{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "jsx": "react",
    "lib": ["es5", "es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6"
  },
  "exclude": [
    "node_modules",
    "build",
    "webpack",
    "acceptance-tests",
    "jest",
    "server-old"
  ]
}
