{
  "name": "quick-draw",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run client:build\" \"npm run server:build\"",
    "client": "ts-node scripts/client.ts",
    "client:build": "npm run client build",
    "client:watch": "npm run client watch",
    "server": "ts-node scripts/server.ts",
    "server:build": "npm run server build",
    "server:watch": "npm run server watch",
    "migrate": "ts-node scripts/migrations.ts",
    "test": "NODE_ENV=testing jest --config jestConfig.js",
    "testold": "ts-node -P config/tsconfig.test.json scripts/test.ts",
    "prod": "npm run build && PORT=3000 NODE_ENV=production npm run start-server",
    "build": "node scripts/build.js",
    "old-test": "node scripts/test.js --env=jsdom"
  },
  "dependencies": {
    "bcrypt": "^3.0.0",
    "chalk": "^2.4.1",
    "dotenv": "^6.0.0",
    "jsonwebtoken": "^8.3.0",
    "knex": "^0.15.2",
    "koa": "^2.5.2",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^4.0.0",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.10",
    "mongoose": "^5.2.5",
    "pg": "^7.4.3",
    "pino": "^5.1.1",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/dotenv": "^4.0.3",
    "@types/enzyme": "^3.1.11",
    "@types/express": "^4.16.0",
    "@types/fork-ts-checker-webpack-plugin": "^0.4.2",
    "@types/jest": "^23.3.1",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/knex": "^0.14.21",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^5.0.1",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-router": "^7.0.31",
    "@types/lodash": "^4.14.116",
    "@types/mini-css-extract-plugin": "^0.2.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.3.1",
    "@types/pino": "^4.16.1",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "@types/react-redux": "^6.0.3",
    "@types/react-test-renderer": "^16.0.1",
    "@types/redux-mock-store": "^1.0.0",
    "@types/sinon": "^5.0.1",
    "@types/supertest": "^2.0.5",
    "@types/webpack": "^4.4.10",
    "@types/webpack-serve": "^2.0.0",
    "autoprefixer": "^8.6.5",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.2",
    "babel-loader": "^7.1.5",
    "babel-preset-react-app": "^3.1.2",
    "babel-runtime": "^6.26.0",
    "body-parser": "^1.18.3",
    "canvas": "^1.6.11",
    "case-sensitive-paths-webpack-plugin": "^2.1.2",
    "concurrently": "^3.6.1",
    "css-loader": "^1.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "file-loader": "^1.1.11",
    "fork-ts-checker-webpack-plugin": "^0.4.9",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.5.0",
    "jest-canvas-mock": "^1.1.0",
    "jest-util": "^23.4.0",
    "mini-css-extract-plugin": "^0.4.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.5",
    "object-assign": "^4.1.1",
    "postcss-loader": "^2.1.5",
    "prettier": "^1.14.2",
    "raf": "^3.4.0",
    "react-test-renderer": "^16.4.1",
    "sinon": "^6.1.5",
    "source-map-loader": "^0.2.3",
    "sqlite3": "^4.0.2",
    "style-loader": "^0.21.0",
    "supertest": "^3.1.0",
    "sw-precache-webpack-plugin": "^0.11.5",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.5.0",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.4.2",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.1",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "url-loader": "^1.0.1",
    "webpack": "^4.16.5",
    "webpack-serve": "^2.0.2",
    "whatwg-fetch": "^2.0.4"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules"
    ],
    "execMap": {
      "ts": "ts-node -P config/tsconfig.server.json"
    }
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "<rootDir>/src/lib/polyfills.ts",
      "<rootDir>/src/lib/testSetup.ts"
    ],
    "testRegex": "src/client/.+\\.(test|spec)\\.(jsx?|tsx?)$",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|ts)x?$"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|less)$": "identity-obj-proxy",
      "shared/.*": "<rootDir>/src/$0"
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "<rootDir>/config/tsconfig.test.json"
      }
    }
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
